
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://unsplash.com/photos/iRF0psyhz10');">
  <div class="banner-content">
    <img src="images/mister_cocktail.png" alt="logo">
    <h1>Welcome to Mister Cocktail</h1>
    <a class="btn btn-primary btn-lg">Start now</a>
  </div>
</div>




<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="card">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <div class="doses">
            <% cocktail.doses.each do |dose| %>
              <p class = 'ingredient-name'><%= dose.ingredient.name %></p>
              <p class = 'dose-description'><%= dose.description %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Create a cocktail', new_cocktail_path  %>
