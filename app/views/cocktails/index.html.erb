
<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1509807995916-c332365e2d9e?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=4c8d364e633e2015fbac047f327ce098&auto=format&fit=crop&w=1571&q=80');">
  <div class="banner-content">
    <%= image_tag "mister_cocktail.png", alt: "alttext", class: 'logo' %>
    <h1>Your one and only cocktails repository</h1>
  </div>
</div>




<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="card">
          <%= link_to cocktail.name, cocktail_path(cocktail), class:'cocktail-name' %>
          <div class="doses">
            <% cocktail.doses.each do |dose| %>
<!--               <div class="dose-content">
                <p class = 'ingredient-name'><%= dose.ingredient.name %></p>
                <p class = 'dose-description'><%= dose.description %></p>
              </div> -->
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Create a cocktail', new_cocktail_path, class: 'link'  %>
